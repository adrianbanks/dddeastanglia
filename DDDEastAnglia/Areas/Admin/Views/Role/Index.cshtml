@model List<string>

@{
    ViewBag.Title = "Index";
}

<h2>Roles</h2>

<p><i class="icon-plus-sign-alt"></i> <a href="@Url.Action("Create", "Role")">Create new role</a></p>

<table id="rolesTable" class="table table-striped table-hover table-condensed">
    <thead>
        <tr><th>
            Role Name
            <span class="icon"></span>
        </th><th>
            &nbsp;
        </th></tr>
    </thead>
    
    <tbody>
        @foreach (string role in Model)
        {
            <tr><td>
                @role
            </td><td>
                <i class="icon-list-alt"></i> <a href="@Url.Action("Details", "Role", new { rolename = role })">Details</a>
                |
                <i class="icon-plus-sign"></i> <a href="@Url.Action("AddUsers", "Role", new { rolename = role })">Add Users</a>
                |
                <i class="icon-minus-sign"></i> <a href="@Url.Action("RemoveUsers", "Role", new { rolename = role })">Remove Users</a>
                |
                <i class="icon-edit"></i> <a href="@Url.Action("Rename", "Role", new { rolename = role })">Rename</a>
                |
                <i class="icon-trash"></i> <a href="@Url.Action("Delete","Role",new { rolename = role })">Delete</a>
            </td></tr>
        }
    </tbody>
</table>

@section scripts
{
    @Scripts.Render("~/bundles/tablesorter")

    <script language="javascript">
        $(document).ready(function() {
            $("#rolesTable").tablesorter({ headers: { 3: { sorter: false } } });
        });
    </script>
}
