@model IEnumerable<DDDEastAnglia.Areas.Admin.Controllers.SessionWithSpeaker>

@{
    var numberOfTracks = 5;
}

<h2>Agenda</h2>

<style>
    hr {
        height: 1px;
        background: black;
        border: 1px;
        margin: 5px 0;
    }

    table, th, td {
        border: 1px solid black;
    }

    tr > td:first-child {
        font-weight: bold;
    }

    th, td {
        padding: 4px;
        vertical-align: top;
        width: 19%;
    }

    .timeCell {
        text-align: center;
        width: 5%;
    }

    .nonSession {
        background-color: #f5f5f5;
    }

    .nonSession td img {
        vertical-align: middle;
        height: auto;
        width: auto;
    }

    .sessionTitle {
        font-weight: bold;
    }

    .speakerName {
        font-size: smaller;
    }
</style>

<table>
    <tr>
        <th class="timeCell"/>
        @for (int track = 1; track <= numberOfTracks; track++)
        {
            <th>Track @track</th>
        }
        </tr>

    <tr class="nonSession">
        <td class="timeCell">08:30</td>
        <td colspan="@numberOfTracks">
            Registration
        </td>
    </tr>

    <tr class="nonSession">
        <td class="timeCell">09:00</td>
        <td colspan="@numberOfTracks">
            Welcome &amp; Housekeeping
        </td>
    </tr>

    <tr>
        <td class="timeCell">09:15</td>
        @for (int track = 1; track <= numberOfTracks; track++)
        {
            <td>@Html.Partial("_SessionListPartial", Model)</td>
        }
    </tr>

    <tr class="nonSession">
        <td class="timeCell">10:15</td>
        <td colspan="@numberOfTracks">
            Break
        </td>
    </tr>

    <tr>
        <td class="timeCell">10:35</td>
        @for (int track = 1; track <= numberOfTracks; track++)
        {
            <td>@Html.Partial("_SessionListPartial", Model)</td>
        }
    </tr>

    <tr class="nonSession">
        <td class="timeCell">11:35</td>
        <td colspan="@numberOfTracks">
            Break
        </td>
    </tr>

    <tr>
        <td class="timeCell">11:55</td>
        @for (int track = 1; track <= numberOfTracks; track++)
        {
            <td>@Html.Partial("_SessionListPartial", Model)</td>
        }
    </tr>

    <tr class="nonSession">
        <td class="timeCell">12:55</td>
        <td colspan="@numberOfTracks">
            Lunch
            <hr/>
            Grok talks
        </td>
    </tr>

    <tr>
        <td class="timeCell">14:00</td>
        @for (int track = 1; track <= numberOfTracks; track++)
        {
            <td>@Html.Partial("_SessionListPartial", Model)</td>
        }
    </tr>

    <tr class="nonSession">
        <td class="timeCell">15:00</td>
        <td colspan="@numberOfTracks">
            Break
        </td>
    </tr>

    <tr>
        <td class="timeCell">15:20</td>
        @for (int track = 1; track <= numberOfTracks; track++)
        {
            <td>@Html.Partial("_SessionListPartial", Model)</td>
        }
    </tr>

    <tr class="nonSession">
        <td class="timeCell">16:20</td>
        <td colspan="@numberOfTracks">
            Break
        </td>
    </tr>

    <tr class="nonSession">
        <td class="timeCell">16:30</td>
        <td colspan="@numberOfTracks">Wrap-up</td>
    </tr>

    <tr class="nonSession">
        <td class="timeCell">17:00</td>
        <td colspan="@numberOfTracks">Close</td>
    </tr>
</table>
